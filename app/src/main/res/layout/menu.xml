        android:background="@drawable/pie"
        android:layout_alignTop="@+id/pie4"
        android:layout_alignStart="@+id/settings"
        android:onClick="pieClicked" />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/pie4"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pie"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/user"
        android:onClick="pieClicked"
        android:nestedScrollingEnabled="false" />
    <Button
        android:text="Liked pattern :"
        android:background="#C4ED68"
        android:textColor="@android:color/black"
