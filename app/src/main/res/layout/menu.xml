<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menuwithtimersettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F0F2DD"
    tools:context="com.example.administrator.productivityenhancer.Menuwithtimersettings">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backtomain"
        android:background="@drawable/menu"
        android:onClick="mainClicked" />
    <Button
        android:text="Like"
        android:layout_marginLeft="15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:background="#C4ED68"
        android:textColor="#373B44"
        android:id="@+id/like"
        android:layout_alignTop="@+id/play"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Play"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="#C4ED68"
        android:textColor="#373B44"
        android:id="@+id/play"
        android:onClick="playClicked"
        android:layout_below="@+id/backtomain"
        android:layout_toEndOf="@+id/like" />

    <Button
        android:text="Settings"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="#C4ED68"
        android:textColor="#373B44"
        android:id="@+id/settings"
        android:onClick="settingClicked"
        android:layout_alignTop="@+id/play"
        android:layout_toEndOf="@+id/play" />

    <Button
        android:text="User"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="#C4ED68"
        android:textColor="#373B44"
        android:id="@+id/user"
        android:layout_alignTop="@+id/settings"
        android:layout_toEndOf="@+id/settings"
        android:onClick="userClicked" />

    <EditText
        android:hint="@string/worktime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/like"
        android:layout_alignStart="@+id/like" />

    <EditText
        android:hint="@string/breaktime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:hint="@string/repeatetime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:hint="@string/longtime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

