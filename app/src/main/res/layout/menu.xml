    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/pie1"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pie"
        android:layout_alignStart="@+id/like"
        android:layout_alignTop="@+id/pie2"
        android:onClick="pieClicked" />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/pie2"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pie"
        android:layout_alignTop="@+id/pie3"
        android:layout_toEndOf="@+id/like"
        android:onClick="pieClicked" />
    <ImageButton
        android:layout_width="60dp"
